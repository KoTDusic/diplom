@model List<ElectronDecanat.Code.LabProgress>
@{
    ViewBag.Title = "Student";
}
<body>
    @if (Model.Count != 0)
    {
    <h3>Факультет: @ViewBag.faculty</h3>
    <h4>Курс-группа-подгруппа: @ViewBag.coors-@ViewBag.group_number-@ViewBag.subgroop_number</h4>
    <h4>Студент @ViewBag.FIO</h4>
    <table id="main-table">
        <thead>
            <tr>
                <th>Дисциплина</th>
                <th>Лабораторная</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
    @{
        for (int i = 0; i < Model.Count; i++)
        {
            string css_class;
            switch (Model[i].lab_status)
            {
                case "Сдано": css_class = "green"; break;
                case "Не сдано": css_class = "red"; break;
                case "Проверяется": css_class = "orange"; break;
                default: css_class = ""; break;
            }
                    <tr class="@css_class">
                        <td>@Model[i].discipline_name</td>
                        <td>@Model[i].lab_name</td>
                        <td>@Model[i].lab_status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    }
    else
    {
        <h3>Не найдено записей в базе для этого студента</h3>
    }
    <div>
        @Html.ActionLink("Назад", "Index", new { name = ViewBag.quarry })
    </div>
</body>
