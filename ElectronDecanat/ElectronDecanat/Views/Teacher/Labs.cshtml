
@{
    ViewBag.Title = "Labs";
}
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Дисциплина</th>
                <th>Студент</th>
                <th>Курс</th>
                <th>Группа</th>
                <th>Подгруппа</th>
                <th>Лабораторная</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @{
                string status;
                for (int i = 0; i < Model.Count; i++)
                {
                    status=Model[i].labStatus;
                    <tr>
                        <td>@Model[i].disciplineName</td>
                        <td>@Model[i].studentName</td>
                        <td>@Model[i].coors</td>
                        <td>@Model[i].groupNumber</td>
                        <td>@Model[i].subgroopNumber</td>
                        <td>@Model[i].labName</td>
                        <td class="clicable" onclick="this.firstChild.click()">@Html.ActionLink(status, "ChangeLabStatus",
                        new 
                        {
                            student_code = Model[i].studentCode,
                            labName = Model[i].labName, 
                            discipline_code = Model[i].disciplineCode, 
                            labStatus = status,
                            discipline = Model[i].disciplineName,
                            student = Model[i].studentName
                        })
                        </td>
                </tr>
                }
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Назад", "Index")
    </div>
    <script type="text/javascript">
        document.onload=new function () {
            $('#main-table').DataTable(russian_lang);
        };
    </script>
</body>
