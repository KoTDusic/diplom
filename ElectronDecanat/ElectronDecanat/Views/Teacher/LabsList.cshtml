
@{
    ViewBag.Title = "LabList";
}
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Специальность</th>
                <th>Дисциплина</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].specialityName</td>
                        <td>@Model[i].disciplineName</td>
                        <td class="clicable" onclick="this.firstChild.click()">@Html.ActionLink("Перейти к лабораторным", "LabsOnDisciplineList", new { discipline = Model[i].disciplineName, speciality = Model[i].specialityName })</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <script type="text/javascript">
        document.onload = new function ()
        {
            $('#main-table').DataTable(russian_lang);
        }
    </script>
</body>

