@model List<ElectronDecanat.Code.Discipline>
    @{
        ViewBag.Title = "Disciplines";
    }

    <h2>Disciplines</h2>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Специальность</th>
                <th>Дисциплина</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].speciality_name (@Model[i].speciality_number)</td>
                        <td>@Model[i].discipline_name</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Редактировать", "EditDiscipline", new { id=Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Удалить", "DeleteDiscipline", new { id = Model[i].id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">
            @Html.ActionLink("Добавить", "AddDiscipline", new {speciality_id = ViewBag.speciality_id})
        </button>
        <br />
        @Html.ActionLink("Назад", "Specialitis", new { faculty_id = ViewBag.faculty_id })
    </div>
    <script type="text/javascript">
        document.onload=new function () {
            $('#main-table').DataTable(russian_lang);
        };
    </script>
</body>
