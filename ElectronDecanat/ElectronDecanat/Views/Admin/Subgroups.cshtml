@model List<ElectronDecanat.Code.Subgroup>
@{
    ViewBag.Title = "Subgroups";
}

<h2>Subgroups</h2>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Факультет</th>
                <th>Специальность(Код специальности)</th>
                <th>Курс-Группа-Подгруппа</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].faculty_name</td>
                        <td>@Model[i].speciality_name (@Model[i].speciality_number)</td>
                        <td>@Model[i].coors-@Model[i].group_number-@Model[i].subgroup_number</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Подробнее(" + Model[i].peoples_count + ")", "Students", new { id = Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Удалить", "DeleteSubgroup", new {id=Model[i].id})
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">
            @Html.ActionLink("Добавить", "AddSubgroup", new { group_id = ViewBag.group_id })
        </button>
    </div>
    <br />
    @Html.ActionLink("Назад", "Groups", new { speciality_id = ViewBag.speciality_id })
    <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
    </script>
</body>


