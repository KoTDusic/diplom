@model List<ElectronDecanat.Code.Subgroup>
@{
    ViewBag.Title = "Subgroups";
}

<h2>Subgroups</h2>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Факультет</th>
                <th>Специальность</th>
                <th>Код специальности</th>
                <th>Курс</th>
                <th>Группа</th>
                <th>Подгруппа</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].faculty_name</td>
                        <td>@Model[i].speciality_name</td>
                        <td>@Model[i].speciality_code</td>
                        <td>@Model[i].coors</td>
                        <td>@Model[i].group_number</td>
                        <td>@Model[i].subgroup_number</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Подробнее", "Students", new { 
                           
                           faculty_name = ViewBag.faculty_name, 
                           speciality_code = Model[i].speciality_code,
                           group_number = Model[i].group_number, 
                           year = Model[i].year })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Удалить", "DeleteSubgroup", new { 
                           faculty_name = ViewBag.faculty_name,
                           speciality_code = Model[i].speciality_code,
                           group_number = Model[i].group_number,
                           year = Model[i].year, 
                           group_code = Model[i].group_code })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">
        @Html.ActionLink("Добавить", "AddSubgroup", new {
            faculty_name = ViewBag.faculty_name,
            speciality_code = ViewBag.speciality_code,
            group_number = ViewBag.group_number,
            year = ViewBag.year,
            group_code = ViewBag.group_code
        })</button>
    </div>
    <br />
    @Html.ActionLink("Назад", "Groups", new { faculty_name = ViewBag.faculty_name, speciality_code = ViewBag.speciality_code })
    <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
    </script>
</body>


