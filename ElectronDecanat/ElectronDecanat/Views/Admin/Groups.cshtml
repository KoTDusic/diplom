@model List<ElectronDecanat.Code.Group>
    @{
        ViewBag.Title = "Groups";
    }

    <h2>Groups</h2>
    <body>
        <table id="main-table">
            <thead>
                <tr>
                    <th>Факультет</th>
                    <th>Специальность(Код специальности)</th>
                    <th>Курс-Группа</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].faculty_name</td>
                            <td>@Model[i].speciality_name (@Model[i].speciality_code)</td>
                            <td>@Model[i].coors-@Model[i].group_number</td>
                            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                                @Html.ActionLink("Подробнее("+Model[i].subgroups_count+")", "Subgroups", 
                                new {   group_code = Model[i].group_code,
                                        faculty_name = Model[i].faculty_name,
                                        speciality_code = Model[i].speciality_code,
                                        speciality_name = Model[i].speciality_name,
                                        group_number = Model[i].group_number,
                                        year = Model[i].year
                           })
                            </td>
                            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                                @Html.ActionLink("Удалить", "DeleteGroup",
                             new{   faculty_name = Model[i].faculty_name,
                                    speciality_code = Model[i].speciality_code,
                                    speciality_name = Model[i].speciality_name,
                                    group_number = Model[i].group_number, 
                                    year = Model[i].year })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div>
            <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">@Html.ActionLink("Добавить", "AddGroup", 
            new { 
                speciality_code = ViewBag.speciality_code,
                speciality_name = ViewBag.speciality_name,
                faculty_name = ViewBag.faculty_name
            })</button>
        </div>
        <br/>
        @Html.ActionLink("Назад", "Specialitis", new
   {
       faculty_name = ViewBag.faculty_name,
       speciality_code = ViewBag.speciality_code,
       speciality_name = ViewBag.speciality_name,
   })
        <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
        </script>
    </body>
