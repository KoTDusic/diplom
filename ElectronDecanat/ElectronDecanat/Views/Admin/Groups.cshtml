@model List<ElectronDecanat.Code.Group>
    @{
        ViewBag.Title = "Groups";
    }

    <h2>Groups</h2>
    <body>
        <table id="main-table">
            <thead>
                <tr>
                    <th>Факультет</th>
                    <th>Специальность(Код специальности)</th>
                    <th>Курс-Группа</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].faculty_name</td>
                            <td>@Model[i].speciality_name (@Model[i].speciality_number)</td>
                            <td>@Model[i].coors-@Model[i].group_number</td>
                            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                                @Html.ActionLink("Подробнее("+Model[i].subgroups_count+")", "Subgroups",new {id = Model[i].id})
                            </td>
                            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                                @Html.ActionLink("Удалить", "DeleteGroup",new {id = Model[i].id})
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div>
            <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Добавить", "AddGroup", new { speciality_id = ViewBag.speciality_id})
            </button>
        </div>
        <br/>
        @Html.ActionLink("Назад", "Specialitis", new { faculty_id=ViewBag.faculty_id })
        <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
        </script>
    </body>
